<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.1.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>jQuery: Gets the top and left position of an element relative to its offset parent.</Title>
      <Author>John Sheehan (@johnsheehan)</Author>
      <Shortcut>jqposition</Shortcut>
      <HelpUrl>http://jquerysnippets.codeplex.com</HelpUrl>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>selector</ID>
          <ToolTip>jQuery selector</ToolTip>
          <Default>selector</Default>
        </Literal>
      </Declarations>
      <Code Language="jscript">
        <![CDATA[
var position = $$($selector$).position();
var top = position.top;
var left = position.left;
$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>

