<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.1.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>jQuery: $.ajax() template for calling ASP.NET WebService/PageMethod</Title>
      <Author>John Sheehan (@johnsheehan)</Author>
      <Shortcut>jqajaxaspnetwebservice</Shortcut>
      <HelpUrl>http://jquerysnippets.codeplex.com</HelpUrl>
	  <Description>Snippet suggested by Dave Ward (@Encosia). More info: http://encosia.com/2008/03/27/using-jquery-to-consume-aspnet-json-web-services/</Description>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>url</ID>
          <ToolTip>The URL for the request</ToolTip>
          <Default>/url</Default>
        </Literal>
        <Literal>
          <ID>data</ID>
          <ToolTip>Data to send (querystring)</ToolTip>
          <Default>{ name: "value" }</Default>
        </Literal>
        <Literal>
          <ID>dataType</ID>
          <ToolTip>Options: xml|json|jsonp|text|html|script</ToolTip>
          <Default>json</Default>
        </Literal>
      </Declarations>
      <Code Language="jscript">
        <![CDATA[$$.ajax({
  type: "POST",
  contentType: "application/json; charset=utf-8",
  dataType: "$dataType$"
  url: "WebService.asmx/WebMethodName", // or Page.aspx/PageMethodName
  data: "$data$" // must be enclosed in quotes
});]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
